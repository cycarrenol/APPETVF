<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dispositivosbt.DispositivosBT"
    android:background="#f5f5dc"
    >

    <TextView
        android:id="@+id/IdTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arboldispositivos"
        android:layout_centerHorizontal="true"
        android:text="Dispositivos vinculados"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        />

    <ListView
        android:id="@+id/IdLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/IdTitulo"
         />

    <Button
        android:id="@+id/BatrasMainActivity"
        android:layout_width="60dp"
        android:layout_height="30dp"
         android:text="AtrÃ¡s"
        android:background="#436827"
        android:textColor="#FFFFFF"
        android:layout_toLeftOf="@+id/arboldispositivos"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"

        />

    <ImageView
        android:id="@+id/arboldispositivos"
        android:layout_width="99dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/appetlogo" />


</RelativeLayout>